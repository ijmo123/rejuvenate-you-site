---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const { title = 'Rejuvenate You', description = 'Professional waxing and beauty services in Scottsdale and Phoenix, Arizona', canonical } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <title>{title}</title>
  <meta name="description" content={description} />

  {canonical && <link rel="canonical" href={canonical} />}

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  {canonical && <meta property="og:url" content={canonical} />}

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>
<body>
  <header class="bg-white border-b border-gray-200">
    <nav class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-primary">Rejuvenate You</a>
      <div class="flex gap-6 items-center">
        <a href="/about" class="text-gray-700 hover:text-primary">About</a>
        <a href="/services" class="text-gray-700 hover:text-primary">Services</a>
        <a href="/blog" class="text-gray-700 hover:text-primary">Blog</a>
        <a href="/contact-us" class="text-gray-700 hover:text-primary">Contact</a>
      </div>
    </nav>
  </header>

  <main class="min-h-screen">
    <slot />
  </main>

  <footer class="bg-gray-100 border-t border-gray-200 mt-12">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="grid grid-cols-3 gap-8 mb-8">
        <div>
          <h3 class="font-bold text-primary mb-4">Scottsdale</h3>
          <p class="text-sm text-gray-600">7127 E Sahuaro Dr, Ste 103<br />Scottsdale, AZ 85254</p>
        </div>
        <div>
          <h3 class="font-bold text-primary mb-4">Phoenix</h3>
          <p class="text-sm text-gray-600">Phoenix Location</p>
        </div>
        <div>
          <h3 class="font-bold text-primary mb-4">Quick Links</h3>
          <ul class="text-sm space-y-2">
            <li><a href="/" class="text-gray-600 hover:text-primary">Home</a></li>
            <li><a href="/about" class="text-gray-600 hover:text-primary">About</a></li>
            <li><a href="/services" class="text-gray-600 hover:text-primary">Services</a></li>
          </ul>
        </div>
      </div>
      <p class="text-center text-sm text-gray-600">&copy; 2024 Rejuvenate You. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
