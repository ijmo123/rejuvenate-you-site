---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  schema?: any;
  currentLocation?: 'scottsdale' | 'phoenix' | null;
}

const {
  title = 'Rejuvenate You',
  description = 'Professional waxing and beauty services in Scottsdale and Phoenix, Arizona',
  canonical,
  ogImage,
  schema,
  currentLocation = null
} = Astro.props;

const currentUrl = Astro.url.href;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="theme-color" content="#53009D" />

  <!-- Google Search Console Verification -->
  <!-- TODO: Replace with your actual verification code from Google Search Console -->
  <!-- Get your code: https://search.google.com/search-console?utm_source=about -->
  {/* <meta name="google-site-verification" content="YOUR_VERIFICATION_CODE_HERE" /> */}

  <link rel="canonical" href={canonical || currentUrl} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical || currentUrl} />
  {ogImage && <meta property="og:image" content={ogImage} />}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

  {schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}

  <!-- Google Analytics 4 -->
  <!-- TODO: Replace G-XXXXXXXXXX with your actual GA4 Measurement ID -->
  <!-- Get your ID: https://analytics.google.com/analytics/web/ -->
  {/* <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-XXXXXXXXXX');
  </script> */}
</head>
<body class="bg-white">
  <Header currentLocation={currentLocation} />
  <main class="min-h-screen">
    <slot />
  </main>
  <Footer currentLocation={currentLocation} />
</body>
</html>