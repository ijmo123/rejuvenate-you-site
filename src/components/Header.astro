---
interface Props {
    currentLocation?: 'scottsdale' | 'phoenix';
}

const { currentLocation = 'scottsdale' } = Astro.props;
---

<header class="bg-white shadow-md sticky top-0 z-50">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
            <!-- Logo -->
            <div class="flex items-center space-x-2">
                <a href="/" class="flex items-center space-x-2">
                    <div class="w-10 h-10 rounded-full" style="background-color: #7B2D8E;"></div>
                    <span class="font-bold text-lg text-gray-900">Rejuvenate You</span>
                </a>
            </div>

            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-1">
                <a href="/services" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-purple-700">
                    Services
                </a>
                <a href="/about" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-purple-700">
                    About
                </a>

                <!-- Location Dropdown -->
                <div class="relative group">
                    <button class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-purple-700 inline-flex items-center">
                        Locations
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                    </button>
                    <div class="hidden group-hover:block absolute left-0 mt-0 w-48 bg-white rounded-md shadow-lg py-2 z-20">
                        <a href="/scottsdale" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">
                            Scottsdale
                        </a>
                        <a href="/phoenix" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">
                            Phoenix
                        </a>
                    </div>
                </div>

                <a href="/contact-us" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-purple-700">
                    Contact
                </a>
            </div>

            <!-- Book Now Button -->
            <div class="flex items-center space-x-4">
                <a
                    href={currentLocation === 'phoenix'
                        ? 'https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start'
                        : 'https://rejuvenateyouwaxing.glossgenius.com/services'}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hidden md:inline-flex px-4 py-2 rounded-md text-sm font-bold text-white hover:shadow-lg transition"
                    style="background-color: #7B2D8E;"
                >
                    Book Now
                </a>

                <!-- Mobile Menu Button -->
                <button class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-purple-700" id="mobile-menu-btn">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-2">
            <a href="/services" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700">
                Services
            </a>
            <a href="/about" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700">
                About
            </a>
            <a href="/scottsdale" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700">
                Scottsdale
            </a>
            <a href="/phoenix" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700">
                Phoenix
            </a>
            <a href="/contact-us" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700">
                Contact
            </a>
            <a
                href={currentLocation === 'phoenix'
                    ? 'https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start'
                    : 'https://rejuvenateyouwaxing.glossgenius.com/services'}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full px-4 py-2 rounded-md text-center font-bold text-white text-base mt-4"
                style="background-color: #7B2D8E;"
            >
                Book Now
            </a>
        </div>
    </nav>
</header>

<script>
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuBtn && mobileMenu) {
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    }
</script>
