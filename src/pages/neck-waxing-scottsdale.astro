import ServicePage from '../layouts/ServicePage.astro';

const faqs = [
  {
    question: "Does neck hair waxing hurt?",
    answer: "Neck hair waxing causes minimal discomfort. The neck area is relatively tolerant of waxing, and our gentle technique ensures a comfortable experience with smooth results."
  },
  {
    question: "How often should I get my neck waxed?",
    answer: "Most clients schedule neck waxing every 4-6 weeks. This keeps the neck area looking clean and well-maintained between haircuts."
  },
  {
    question: "Can women get neck waxing too?",
    answer: "Absolutely! While neck waxing is popular with men for maintaining clean hairlines, women can also benefit from neck waxing to remove unwanted hairs at the nape of the neck."
  }
];
