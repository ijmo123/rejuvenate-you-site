---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Page Not Found | Rejuvenate You';
const pageDescription = 'Sorry, the page you are looking for could not be found. Visit our homepage to explore our waxing and skincare services in Scottsdale and Phoenix.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="text-center max-w-2xl">
      <h1 class="text-6xl md:text-8xl font-bold mb-4" style="color: #7B2D8E;">404</h1>
      <p class="text-2xl md:text-3xl font-semibold mb-4 text-gray-800">Page Not Found</p>
      <p class="text-lg text-gray-600 mb-8">
        Sorry, we couldn't find the page you're looking for. It might have been moved or no longer exists.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/" 
          class="inline-flex items-center justify-center px-8 py-3 rounded-lg font-bold text-white hover:shadow-lg transition"
          style="background-color: #7B2D8E;"
        >
          Go Home
        </a>
        <a 
          href="/services" 
          class="inline-flex items-center justify-center px-8 py-3 rounded-lg font-bold border-2 hover:bg-gray-50 transition"
          style="color: #7B2D8E; border-color: #7B2D8E;"
        >
          View Services
        </a>
      </div>
      
      <div class="mt-12 pt-8 border-t border-gray-200">
        <p class="text-gray-500 mb-4">Or visit one of our locations:</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center text-sm">
          <a href="/scottsdale" class="text-purple-700 hover:underline">
            üìç Scottsdale Location
          </a>
          <a href="/phoenix" class="text-purple-700 hover:underline">
            üìç Phoenix Location
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
