---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingCTA from '../components/BookingCTA.astro';

const pageTitle = 'Bachelorette Wax Party Scottsdale | Group Booking';
const pageDescription = 'Plan the perfect bachelorette wax party in Scottsdale! Group Brazilian and bikini waxing for the bride and bridesmaids. Fun, private, and memorable. Book today!';

const schema = {
  "@context": "https://schema.org",
  "@type": "Event",
  "name": "Bachelorette Wax Party",
  "description": "Group waxing party for bachelorette celebrations in Scottsdale",
  "eventStatus": "https://schema.org/EventScheduled",
  "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
  "location": {
    "@type": "Place",
    "name": "Rejuvenate You Scottsdale",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "7127 E Sahuaro Dr, Ste 103",
      "addressLocality": "Scottsdale",
      "addressRegion": "AZ",
      "postalCode": "85254",
      "addressCountry": "US"
    }
  },
  "offers": {
    "@type": "Offer",
    "price": "60",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  }
};
---

