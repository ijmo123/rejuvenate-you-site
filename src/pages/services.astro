---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingCTA from '../components/BookingCTA.astro';

const pageTitle = 'Our Services | Waxing & Skin Treatments | Rejuvenate You';
const pageDescription = 'Full menu of waxing and skincare services for both men and women. Brazilian wax, bikini wax, men\'s waxing, microneedling, dermaplaning, and more. Serving Phoenix and Scottsdale.';

const schema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Brazilian Wax",
      "url": "https://www.rejuvenate-you.com/brazilian-wax-scottsdale"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Bikini Wax",
      "url": "https://www.rejuvenate-you.com/bikini-wax-scottsdale"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Microneedling",
      "url": "https://www.rejuvenate-you.com/microneedling-scottsdale-az"
    }
  ]
};
---

<BaseLayout title={pageTitle} description={pageDescription} schema={schema}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-purple-900 via-purple-800 to-purple-900 text-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Our Services</h1>
      <p class="text-xl max-w-3xl mx-auto text-purple-100">
        Full range of waxing and skincare services for both men and women
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
