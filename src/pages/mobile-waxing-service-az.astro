---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingCTA from '../components/BookingCTA.astro';

const pageTitle = 'Mobile Waxing Service Phoenix & Scottsdale | At-Home Waxing';
const pageDescription = 'Professional mobile waxing service throughout Phoenix and Scottsdale. We come to your home or hotel for private, convenient hair removal. Book today!';

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Mobile Waxing Service",
  "description": "Professional mobile waxing service in Phoenix and Scottsdale. At-home hair removal services.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Rejuvenate You",
    "telephone": "+1-623-980-3867"
  },
  "areaServed": {
    "@type": "Place",
    "name": "Phoenix and Scottsdale, AZ"
  }
};
---

