---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingCTA from '../components/BookingCTA.astro';

const pageTitle = 'Waxing & Microneedling in Phoenix | Rejuvenate You';
const pageDescription = 'Professional waxing and microneedling in Phoenix. 15+ years experience, 5.0★ rating. Brazilian, men\'s waxing, facials. Book online.';

const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Rejuvenate You - Phoenix",
  "image": "https://www.rejuvenate-you.com/images/phoenix-location.jpg",
  "@id": "https://www.rejuvenate-you.com/phoenix",
  "url": "https://www.rejuvenate-you.com/phoenix",
  "telephone": "+1-602-374-4415",
  "priceRange": "$$",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Phoenix",
    "addressRegion": "AZ",
    "addressCountry": "US"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "19"
  },
  "serviceType": ["Brazilian Waxing", "Body Waxing", "Microneedling", "Dermaplaning"]
};

const services = [
  { name: "Brazilian Wax", price: "$60", url: "/brazilian-wax-phoenix" },
  { name: "Bikini Wax", price: "$45", url: "/bikini-wax-phoenix" },
  { name: "Men's Waxing", price: "From $30", url: "/male-face-waxing-phoenix" },
  { name: "Full Face Wax", price: "$45", url: "/full-face-waxing-phoenix" },
  { name: "Microneedling", price: "From $200", url: "/microneedling-phoenix" },
  { name: "Dermaplaning", price: "$85", url: "/dermaplaning-phoenix" }
];
---

<BaseLayout title={pageTitle} description={pageDescription} schema={schema}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-purple-900 via-purple-800 to-purple-900 text-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Rejuvenate You Phoenix</h1>
          <p class="text-xl mb-6 text-purple-100">
            Professional waxing and skin care services in Phoenix. Experience the same exceptional 5-star service at our Phoenix location.
          </p>
          <div class="flex items-center mb-6">
            <span class="text-yellow-400 text-2xl mr-2">★★★★★</span>
            <span class="text-purple-100">5.0 rating (19 reviews)</span>
          </div>
          <a 
            href="https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 rounded-lg font-bold text-purple-900 bg-white hover:bg-purple-50 transition shadow-lg"
          >
            Book Appointment
          </a>
        </div>
        <div class="hidden md:block">
          <img 
            src="/images/6358773dfa2fa42351f2e029_46598252-ff89-4700-80f2-2e535177697e_brazilian-waxing-scottsdale.jpg"
            alt="Rejuvenate You Phoenix location"
            class="rounded-xl shadow-2xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Location Info -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        
        <!-- Address & Hours -->
        <div>
          <h2 class="text-3xl font-bold mb-6" style="color: #7B2D8E;">Our Phoenix Location</h2>
          <div class="bg-purple-50 p-8 rounded-xl mb-8">
            <address class="not-italic">
              <p class="text-lg font-semibold mb-2">Rejuvenate You</p>
              <p class="text-gray-700 mb-4">Phoenix, AZ</p>
              <p class="text-xl font-bold" style="color: #7B2D8E;">
                <a href="tel:6023744415" class="hover:underline">(602) 374-4415</a>
              </p>
            </address>
          </div>

          <h3 class="text-xl font-bold mb-4" style="color: #7B2D8E;">Hours</h3>
          <div class="bg-gray-50 p-6 rounded-xl">
            <table class="w-full">
              <tbody>
                <tr class="border-b border-gray-200">
                  <td class="py-2 font-medium">Monday - Friday</td>
                  <td class="py-2 text-right">By Appointment</td>
                </tr>
                <tr class="border-b border-gray-200">
                  <td class="py-2 font-medium">Saturday</td>
                  <td class="py-2 text-right">By Appointment</td>
                </tr>
                <tr>
                  <td class="py-2 font-medium">Sunday</td>
                  <td class="py-2 text-right">Closed</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Map Placeholder -->
        <div>
          <h2 class="text-3xl font-bold mb-6" style="color: #7B2D8E;">Find Us</h2>
          <div class="bg-gray-100 rounded-xl h-96 flex items-center justify-center border-2 border-dashed border-gray-300">
            <div class="text-center text-gray-500">
              <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-lg font-medium">Google Map Embed</p>
              <p class="text-sm">Phoenix, AZ</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="py-16 bg-purple-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8 text-center" style="color: #7B2D8E;">Services in Phoenix</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service) => (
          <a 
            href={service.url}
            class="bg-white p-6 rounded-xl shadow-sm hover:shadow-lg transition border border-gray-100"
          >
            <h3 class="font-bold mb-2" style="color: #7B2D8E;">{service.name}</h3>
            <p class="text-xl font-bold text-gray-900">{service.price}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Book Online -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6" style="color: #7B2D8E;">Book Your Phoenix Appointment</h2>
      <p class="text-lg text-gray-600 mb-8">
        Ready to experience the Rejuvenate difference? Book online or call us today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-8 py-4 rounded-lg font-bold text-white hover:shadow-lg transition"
          style="background-color: #7B2D8E;"
        >
          Book Online
        </a>
        <a 
          href="tel:6023744415"
          class="inline-block px-8 py-4 rounded-lg font-bold border-2 hover:bg-gray-50 transition"
          style="color: #7B2D8E; border-color: #7B2D8E;"
        >
          Call (602) 374-4415
        </a>
      </div>
    </div>
  </section>
</BaseLayout>