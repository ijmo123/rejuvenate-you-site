---
import BaseLayout from '../layouts/BaseLayout.astro';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Book Your Appointment | Rejuvenate You',
  description: 'Book your waxing or skincare appointment at Rejuvenate You in Scottsdale or Phoenix. Easy online booking available.'
};
---

<BaseLayout
  title="Book Your Appointment | Rejuvenate You"
  description="Ready to rejuvenate? Select your treatment and book your appointment with Rejuvenate You in Scottsdale or Phoenix."
  schema={schema}
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-4 text-center" style="color: #53009D;">Book Your Appointment</h1>
    <p class="text-xl text-gray-600 mb-12 text-center">
      Ready to rejuvenate? Select your location and book your appointment with Rejuvenate You in just a few clicks.
    </p>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Scottsdale Location -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-purple-600 text-white p-6">
          <h2 class="text-2xl font-bold mb-2">Scottsdale</h2>
          <p class="opacity-90">7127 E Sahuaro Dr, Ste 103<br>Scottsdale, AZ 85254</p>
        </div>
        <div class="p-6">
          <h3 class="font-bold text-lg mb-4" style="color: #53009D;">Hours</h3>
          <ul class="space-y-2 text-gray-700 mb-6">
            <li class="flex justify-between">
              <span>Monday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Tuesday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Wednesday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Thursday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Friday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Saturday</span>
              <span>9 AM - 2 PM</span>
            </li>
            <li class="flex justify-between text-gray-500">
              <span>Sunday</span>
              <span>Closed</span>
            </li>
          </ul>
          <a
            href="https://rejuvenateyouwaxing.glossgenius.com/services"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center px-6 py-3 rounded-lg font-bold text-white"
            style="background-color: #53009D;"
          >
            Book Scottsdale
          </a>
        </div>
      </div>

      <!-- Phoenix Location -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-purple-600 text-white p-6">
          <h2 class="text-2xl font-bold mb-2">Phoenix</h2>
          <p class="opacity-90">727 E Bethany Home Rd suite d-224<br>Phoenix, AZ 85044</p>
        </div>
        <div class="p-6">
          <h3 class="font-bold text-lg mb-4" style="color: #53009D;">Hours</h3>
          <ul class="space-y-2 text-gray-700 mb-6">
            <li class="flex justify-between">
              <span>Monday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Tuesday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Wednesday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Thursday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Friday</span>
              <span>9 AM - 7 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Saturday</span>
              <span>9 AM - 2 PM</span>
            </li>
            <li class="flex justify-between text-gray-500">
              <span>Sunday</span>
              <span>Closed</span>
            </li>
          </ul>
          <a
            href="https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center px-6 py-3 rounded-lg font-bold text-white"
            style="background-color: #53009D;"
          >
            Book Phoenix
          </a>
        </div>
      </div>
    </div>

    <!-- Contact Info -->
    <div class="mt-12 text-center">
      <h2 class="text-2xl font-bold mb-4" style="color: #53009D;">Need Help?</h2>
      <p class="text-gray-600 mb-4">Have questions about our services or need assistance booking?</p>
      <p class="text-lg">
        Call us at <a href="tel:4805551234" class="font-bold" style="color: #53009D;">(480) 555-1234</a>
      </p>
    </div>
  </div>
</BaseLayout>
