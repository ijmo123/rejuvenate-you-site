---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookingCTA from '../components/BookingCTA.astro';
import FAQSection from '../components/FAQSection.astro';

const pageTitle = 'Rejuvenate You | Brazilian Wax & Microneedling | Scottsdale & Phoenix';
const pageDescription = 'Experience the least painful Brazilian wax in Scottsdale & Phoenix. 15+ years expertise, 5.0★ rating. Full body waxing, microneedling & dermaplaning. Book now!';

const homeSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Rejuvenate You",
  "image": "https://www.rejuvenate-you.com/images/rejuvenate-you-logo.jpg",
  "@id": "https://www.rejuvenate-you.com",
  "url": "https://www.rejuvenate-you.com",
  "telephone": "+1-480-555-1234",
  "priceRange": "$$",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "7127 E Sahuaro Dr, Ste 103",
    "addressLocality": "Scottsdale",
    "addressRegion": "AZ",
    "postalCode": "85254",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 33.5694,
    "longitude": -111.9244
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "09:00",
      "closes": "19:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Saturday",
      "opens": "09:00",
      "closes": "14:00"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "63"
  },
  "serviceType": ["Brazilian Waxing", "Body Waxing", "Microneedling", "Dermaplaning"]
};

const faqs = [
  {
    question: "Does Brazilian waxing hurt?",
    answer: "We specialize in the <strong>least painful Brazilian wax experience</strong>. Using guided breathing techniques, strategic speed, and precision detail work, we minimize discomfort. Many clients are surprised by how manageable it is!"
  },
  {
    question: "What is The Rejuvenate Method™?",
    answer: "Our proprietary service flow includes: (1) Warm greeting to establish safety, (2) Guided breathing before first pull, (3) Strategic speed + precision detail, (4) Thorough finish check, and (5) Empowered closing language to reinforce your confidence."
  },
  {
    question: "How long does a Brazilian wax take?",
    answer: "Our Brazilian waxes are performed quickly and efficiently—typically 15-20 minutes. We respect your time while ensuring thorough, detailed results."
  },
  {
    question: "Do you offer waxing for men?",
    answer: "Yes! We provide full body waxing services for men including Brazilian (male waxing), chest, back, face, and more. Our skilled technicians ensure a comfortable, professional experience for all clients."
  },
  {
    question: "What areas do you serve?",
    answer: "We have two convenient locations: <strong>Scottsdale</strong> at 7127 E Sahuaro Dr, Ste 103, and <strong>Phoenix</strong>. Both locations offer the same exceptional service and 5-star experience."
  }
];
---

<BaseLayout 
  title={pageTitle} 
  description={pageDescription}
  schema={homeSchema}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-purple-900 via-purple-800 to-purple-900 text-white py-20 md:py-32">
    <div class="absolute inset-0 opacity-10 bg-[url('/images/hero-pattern.jpg')] bg-cover bg-center"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
        Renew Your Skin.<br />
        <span class="text-purple-200">Refresh Your Mindset.</span>
      </h1>
      <p class="text-xl md:text-2xl mb-4 max-w-3xl mx-auto text-purple-100">
        Experience the <span class="font-semibold text-white">least painful Brazilian wax</span> in Scottsdale & Phoenix.
      </p>
      <p class="text-lg mb-8 text-purple-200">
        15+ years expertise • 5.0★ rating • 2 convenient locations
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://rejuvenateyouwaxing.glossgenius.com/services"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-bold text-purple-900 bg-white hover:bg-purple-50 transition shadow-lg"
        >
          Book Scottsdale
        </a>
        <a 
          href="https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-bold text-white border-2 border-white hover:bg-white/10 transition"
        >
          Book Phoenix
        </a>
      </div>
      <p class="mt-6 text-sm text-purple-300">
        New clients: <span class="font-semibold text-white">50% off your second Brazilian wax!</span>
      </p>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: #7B2D8E;">
          Full Body Waxing & Skin Rejuvenation
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Top-quality services tailored for both male and female clients. 
          We make you feel renewed — physically and mentally.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Brazilian Waxing -->
        <div class="bg-purple-50 rounded-xl p-8 text-center hover:shadow-lg transition">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center" style="background-color: #7B2D8E;">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="color: #7B2D8E;">Brazilian Waxing</h3>
          <p class="text-gray-600 mb-4">
            Our signature service. Quick, thorough, and designed to be the least painful experience possible.
          </p>
          <a href="/brazilian-wax-scottsdale" class="inline-block font-semibold hover:underline" style="color: #7B2D8E;">
            Learn More →
          </a>
        </div>

        <!-- Full Body Waxing -->
        <div class="bg-purple-50 rounded-xl p-8 text-center hover:shadow-lg transition">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center" style="background-color: #7B2D8E;">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="color: #7B2D8E;">Full Body Waxing</h3>
          <p class="text-gray-600 mb-4">
            Bikini, brows, face, legs, chest, back, and more. Services for women and men.
          </p>
          <a href="/services" class="inline-block font-semibold hover:underline" style="color: #7B2D8E;">
            View All Services →
          </a>
        </div>

        <!-- Microneedling -->
        <div class="bg-purple-50 rounded-xl p-8 text-center hover:shadow-lg transition">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center" style="background-color: #7B2D8E;">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3" style="color: #7B2D8E;">Microneedling</h3>
          <p class="text-gray-600 mb-4">
            Treat early signs of skin laxity, fine lines, dull skin tones, and scars. Results-driven treatments.
          </p>
          <a href="/microneedling-scottsdale-az" class="inline-block font-semibold hover:underline" style="color: #7B2D8E;">
            Learn More →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- The Rejuvenate Method -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: #7B2D8E;">
          The Rejuvenate Method™
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our proprietary 5-step process designed for maximum comfort and confidence.
        </p>
      </div>

      <div class="grid md:grid-cols-5 gap-6">
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #7B2D8E;">1</div>
          <h4 class="font-semibold mb-2">Warm Greeting</h4>
          <p class="text-sm text-gray-600">Establish safety and comfort from the start</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #7B2D8E;">2</div>
          <h4 class="font-semibold mb-2">Guided Breathing</h4>
          <p class="text-sm text-gray-600">Techniques to ease tension before treatment</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #7B2D8E;">3</div>
          <h4 class="font-semibold mb-2">Speed + Precision</h4>
          <p class="text-sm text-gray-600">Strategic, efficient technique with detail work</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #7B2D8E;">4</div>
          <h4 class="font-semibold mb-2">Thorough Check</h4>
          <p class="text-sm text-gray-600">Ensuring complete, flawless results</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #7B2D8E;">5</div>
          <h4 class="font-semibold mb-2">Empowered Close</h4>
          <p class="text-sm text-gray-600">Reinforcing your confidence to conquer the world</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Two Locations -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: #7B2D8E;">
          Two Convenient Locations
        </h2>
        <p class="text-xl text-gray-600">
          Same exceptional 5-star service, two Valley locations.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Scottsdale -->
        <div class="border-2 border-purple-100 rounded-xl p-8 hover:border-purple-300 transition">
          <h3 class="text-2xl font-bold mb-2" style="color: #7B2D8E;">Scottsdale</h3>
          <address class="not-italic text-gray-600 mb-4">
            7127 E Sahuaro Dr, Ste 103<br />
            Scottsdale, AZ 85254
          </address>
          <p class="text-gray-600 mb-6">
            <strong>Hours:</strong><br />
            Mon-Fri: 9:00 AM - 7:00 PM<br />
            Sat: 9:00 AM - 2:00 PM<br />
            Sun: Closed
          </p>
          <a 
            href="https://rejuvenateyouwaxing.glossgenius.com/services"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center px-6 py-3 rounded-lg font-bold text-white hover:shadow-lg transition"
            style="background-color: #7B2D8E;"
          >
            Book Scottsdale
          </a>
        </div>

        <!-- Phoenix -->
        <div class="border-2 border-purple-100 rounded-xl p-8 hover:border-purple-300 transition">
          <h3 class="text-2xl font-bold mb-2" style="color: #7B2D8E;">Phoenix</h3>
          <address class="not-italic text-gray-600 mb-4">
            Phoenix, AZ<br />
            <span class="text-sm">(Central Phoenix location)</span>
          </address>
          <p class="text-gray-600 mb-6">
            <strong>Hours:</strong><br />
            Contact for availability<br />
            Flexible scheduling
          </p>
          <a 
            href="https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center px-6 py-3 rounded-lg font-bold text-white hover:shadow-lg transition"
            style="background-color: #7B2D8E;"
          >
            Book Phoenix
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 bg-purple-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: #7B2D8E;">
          What Our Clients Say
        </h2>
        <p class="text-xl text-gray-600">
          5.0★ rating across both locations
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl p-6 shadow-sm">
          <div class="flex text-yellow-400 mb-3">★★★★★</div>
          <p class="text-gray-700 mb-4">
            "Hands down the least painful Brazilian I've ever had. Danielle's technique is incredible, and the guided breathing really helps!"
          </p>
          <p class="font-semibold text-sm" style="color: #7B2D8E;">— Sarah M., Scottsdale</p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-sm">
          <div class="flex text-yellow-400 mb-3">★★★★★</div>
          <p class="text-gray-700 mb-4">
            "As a guy, I was nervous about my first wax. They made me feel completely comfortable. Professional, fast, and great results."
          </p>
          <p class="font-semibold text-sm" style="color: #7B2D8E;">— Michael T., Phoenix</p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-sm">
          <div class="flex text-yellow-400 mb-3">★★★★★</div>
          <p class="text-gray-700 mb-4">
            "I've been coming here for microneedling for 6 months. My skin has never looked better. The results are real!"
          </p>
          <p class="font-semibold text-sm" style="color: #7B2D8E;">— Jessica L., Scottsdale</p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Danielle -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6" style="color: #7B2D8E;">
            Meet Danielle
          </h2>
          <p class="text-lg text-gray-700 mb-4">
            Hi, I'm Danielle Morales, the owner of Rejuvenate You. I'm an esthetician with <strong>over 15 years of experience</strong> working in wax chains and medi-spas.
          </p>
          <p class="text-gray-700 mb-4">
            During my years in the industry, I discovered my passion for connecting with people and being a part of their transformations. I believe that good connections are crucial for achieving excellent results.
          </p>
          <p class="text-gray-700 mb-6">
            My goal is to provide a comfortable, efficient environment where clients feel at ease while receiving the best possible treatments. <strong>Integrity before income</strong> — always.
          </p>
          <a href="/about" class="inline-block px-6 py-3 rounded-lg font-bold text-white hover:shadow-lg transition" style="background-color: #7B2D8E;">
            Read My Story
          </a>
        </div>
        <div class="rounded-xl overflow-hidden h-80">
          <img 
            src="https://images.squarespace-cdn.com/content/v1/6358773dfa2fa42351f2e029/30e597b0-9da9-44df-80fe-14b1927e8308/daniellemoralesheadshot.jpg"
            alt="Danielle Morales, Owner & Esthetician"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <FAQSection faqs={faqs} title="Frequently Asked Questions" />

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-purple-900 via-purple-800 to-purple-900 text-white text-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Feel Renewed?
      </h2>
      <p class="text-xl mb-8 text-purple-100">
        Book your appointment today and experience the Rejuvenate difference.
      </p>
      <p class="text-lg mb-8 text-purple-200">
        New clients: <span class="font-semibold text-white">50% off your second Brazilian wax!</span>
      </p>
      <BookingCTA location="both" />
    </div>
  </section>
</BaseLayout>