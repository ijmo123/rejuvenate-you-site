---
import BaseLayout from '../../layouts/BaseLayout.astro';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: 'Contact Rejuvenate You Phoenix | Book Your Consultation',
  description: 'Contact Rejuvenate You in Phoenix to schedule your consultation. Phone and online booking available.'
};
---

<BaseLayout
  title="Contact Rejuvenate You Phoenix | Book Your Consultation"
  description="Have questions or ready to get started? Contact Rejuvenate You Phoenix to schedule your consultation and begin your journey to refreshed confidence."
  schema={schema}
  currentLocation="phoenix"
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-4 text-center" style="color: #7B2D8E;">Contact Us - Phoenix</h1>
    <p class="text-xl text-gray-600 mb-12 text-center">
      Have questions or ready to get started? Contact our Phoenix location to schedule your consultation.
    </p>

    <div class="max-w-2xl mx-auto">
      <!-- Phoenix Location -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8 border-4 border-purple-500">
        <div class="bg-purple-600 text-white p-6 text-center">
          <h2 class="text-2xl font-bold">Phoenix</h2>
          <span class="inline-block mt-2 px-3 py-1 bg-white/20 rounded-full text-sm">You Are Here</span>
        </div>
        <div class="p-8 space-y-6">
          <div>
            <h3 class="font-semibold text-gray-700 mb-1">Address</h3>
            <p class="text-gray-600 text-lg">
              Phoenix, AZ
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-gray-700 mb-1">Phone</h3>
            <p>
              <a href="tel:6023744415" class="text-2xl font-bold" style="color: #7B2D8E;">(602) 374-4415</a>
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-gray-700 mb-1">Hours</h3>
            <ul class="space-y-2 text-gray-600">
              <li class="flex justify-between">
                <span>By Appointment</span>
                <span>Flexible Scheduling</span>
              </li>
            </ul>
          </div>
          <a
            href="https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center px-6 py-4 rounded-lg font-bold text-white text-lg"
            style="background-color: #7B2D8E;"
          >
            Book Phoenix Appointment
          </a>
        </div>
      </div>

      <!-- Scottsdale Location -->
      <div class="bg-gray-50 rounded-xl p-6 text-center border border-gray-200">
        <h3 class="text-lg font-semibold mb-2" style="color: #7B2D8E;">Also in Scottsdale</h3>
        <p class="text-gray-600 mb-2">
          7127 E Sahuaro Dr, Ste 103<br>
          Scottsdale, AZ 85254
        </p>
        <p class="text-gray-600 mb-4">
          ðŸ“ž (480) 747-6996
        </p>
        <a href="/scottsdale/contact" class="inline-block px-6 py-2 rounded-lg font-semibold border-2 hover:bg-white transition" style="color: #7B2D8E; border-color: #7B2D8E;">
          Visit Scottsdale Contact Page
        </a>
      </div>
    </div>

    <!-- Email Section -->
    <div class="bg-purple-50 rounded-xl p-8 text-center mt-12">
      <h2 class="text-2xl font-bold mb-4" style="color: #7B2D8E;">Email Us</h2>
      <p class="text-gray-600 mb-4">Have questions? Send us an email and we'll get back to you within 24 hours.</p>
      <a 
        href="mailto:info@rejuvenate-you.com" 
        class="text-lg font-bold"
        style="color: #7B2D8E;"
      >
        info@rejuvenate-you.com
      </a>
    </div>
  </div>
</BaseLayout>
