---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BookingCTA from '../../components/BookingCTA.astro';

const pageTitle = 'Our Services | Waxing & Skin Treatments | Rejuvenate You Phoenix';
const pageDescription = 'Full menu of waxing and skincare services in Phoenix, AZ. Brazilian wax, bikini wax, men\'s waxing, microneedling, dermaplaning, and more. Book online.';

const schema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Brazilian Wax",
      "url": "https://www.rejuvenate-you.com/brazilian-wax-phoenix"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Bikini Wax",
      "url": "https://www.rejuvenate-you.com/bikini-wax-phoenix"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Microneedling",
      "url": "https://www.rejuvenate-you.com/microneedling-phoenix"
    }
  ]
};

const womensServices = [
  { name: "Brazilian Wax", price: "$60", url: "/brazilian-wax-phoenix", desc: "Remove all unwanted hair with our premium Brazilian wax service." },
  { name: "Bikini Wax", price: "$45", url: "/bikini-wax-phoenix", desc: "Professional pubic hair removal for fresher and smoother skin." },
  { name: "Butt Strip Wax", price: "$25", url: "/butt-strip-wax-phoenix", desc: "Complete your Brazilian with smoothness between the cheeks." },
  { name: "Stomach Wax", price: "$35", url: "/full-strip-stomach-wax-phoenix", desc: "Full stomach or strip wax for smooth midsection." },
  { name: "Eyebrow Wax", price: "$21", url: "/eyebrow-waxing-phoenix", desc: "Shape and define your brows with expert precision." },
  { name: "Upper Lip Wax", price: "$15", url: "/upper-lip-wax-phoenix", desc: "Quick removal of unwanted facial hair above the lip." },
  { name: "Full Face Wax", price: "$45", url: "/full-face-waxing-phoenix", desc: "Complete facial hair removal for smooth, radiant skin." },
  { name: "Underarm Wax", price: "$25", url: "/underarm-wax-phoenix", desc: "Quick and effective underarm hair removal." },
  { name: "Full Leg Wax", price: "$70", url: "/full-leg-wax-phoenix", desc: "Complete leg waxing from thigh to ankle." },
];

const mensServices = [
  { name: "Men's Brazilian", price: "$80", url: "/mens-waxing-phoenix", desc: "Professional male Brazilian waxing service." },
  { name: "Back Wax", price: "$60", url: "/back-wax-phoenix", desc: "Full back hair removal for smooth skin." },
  { name: "Chest Wax", price: "$30", url: "/mens-waxing-phoenix", desc: "Chest hair removal and grooming." },
  { name: "Neck Wax", price: "$20", url: "/neck-waxing-phoenix", desc: "Clean up hairline for a polished look." },
  { name: "Male Face Wax", price: "$45", url: "/male-face-waxing-phoenix", desc: "Complete facial grooming for men." },
  { name: "Ear Hair Wax", price: "$15", url: "/ear-hair-waxing-phoenix", desc: "Quick ear hair removal." },
  { name: "Nose Hair Wax", price: "$15", url: "/nose-hair-waxing-phoenix", desc: "Nose hair waxing for men." },
];

const skinServices = [
  { name: "Microneedling", price: "From $200", url: "/microneedling-phoenix", desc: "Treat early signs of skin laxity, fine lines, and dull skin tones." },
  { name: "Dermaplaning", price: "$85", url: "/dermaplaning-phoenix", desc: "Exfoliating treatment that removes dead skin cells and peach fuzz." },
];
---

<BaseLayout title={pageTitle} description={pageDescription} schema={schema} currentLocation="phoenix">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-purple-900 via-purple-800 to-purple-900 text-white py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Our Services in Phoenix</h1>
      <p class="text-xl max-w-3xl mx-auto text-purple-100">
        Full range of waxing and skincare services for both men and women
      </p>
      <p class="mt-4 text-purple-200">
        üìç 727 E Bethany Home Rd, Phoenix, AZ 85014 | üìû <a href="tel:6239803867" class="underline hover:text-white">(623) 980-3867</a>
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Women's Waxing -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-center" style="color: #53009D;">Women's Waxing Services</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {womensServices.map((service) => (
            <a href={service.url} class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition">
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2" style="color: #53009D;">{service.name}</h3>
                <p class="text-2xl font-bold text-gray-900 mb-4">{service.price}</p>
                <p class="text-gray-600 mb-4">{service.desc}</p>
                <span class="inline-block font-semibold hover:underline" style="color: #53009D;">Learn More ‚Üí</span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Men's Waxing -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-4 text-center" style="color: #53009D;">Men's Waxing Services</h2>
        <p class="text-center text-gray-600 mb-8 max-w-2xl mx-auto">
          Professional grooming services for the modern man. <a href="/male-waxing-phoenix" class="text-purple-700 hover:underline font-semibold">View all men's services ‚Üí</a>
        </p>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {mensServices.map((service) => (
            <a href={service.url} class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition">
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2" style="color: #53009D;">{service.name}</h3>
                <p class="text-2xl font-bold text-gray-900 mb-4">{service.price}</p>
                <p class="text-gray-600 mb-4">{service.desc}</p>
                <span class="inline-block font-semibold hover:underline" style="color: #53009D;">Learn More ‚Üí</span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Skin Treatments -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-center" style="color: #53009D;">Skin Treatments</h2>
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {skinServices.map((service) => (
            <a href={service.url} class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition">
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2" style="color: #53009D;">{service.name}</h3>
                <p class="text-2xl font-bold text-gray-900 mb-4">{service.price}</p>
                <p class="text-gray-600 mb-4">{service.desc}</p>
                <span class="inline-block font-semibold hover:underline" style="color: #53009D;">Learn More ‚Üí</span>
              </div>
            </a>
          ))}
        </div>
      </div>

    </div>
  </section>

  <!-- Special Offer -->
  <section class="py-16 bg-purple-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4" style="color: #53009D;">First-Time Client Special</h2>
      <p class="text-xl mb-2">
        <span class="font-bold" style="color: #53009D;">50% off your second Brazilian wax</span>
      </p>
      <p class="text-gray-600 mb-8">
        Book your second Brazilian wax within 4-6 weeks and save 50%!
      </p>
      <a 
        href="https://app.squareup.com/appointments/book/e9ycxyisf79aby/L96KEQZQVHJ37/start"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-3 rounded-lg font-bold text-white hover:shadow-lg transition"
        style="background-color: #53009D;"
      >
        Book Phoenix
      </a>
    </div>
  </section>

  <!-- Switch Location -->
  <section class="py-8 bg-white border-t">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-gray-600">
        Looking for our Scottsdale location? 
        <a href="/scottsdale/services" class="font-semibold hover:underline" style="color: #53009D;">View Scottsdale Services ‚Üí</a>
      </p>
    </div>
  </section>
</BaseLayout>
