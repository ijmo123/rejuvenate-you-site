---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('blog');

// Sort by title for now (can add date field later)
const sortedPosts = posts.sort((a, b) => a.data.title.localeCompare(b.data.title));

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  headline: 'Rejuvenate You Blog | Waxing & Skincare Tips - Scottsdale',
  description: 'Expert tips and advice on waxing, skincare, and beauty treatments from Rejuvenate You in Scottsdale.',
  url: 'https://www.rejuvenate-you.com/scottsdale/blog/',
  publisher: {
    '@type': 'Organization',
    name: 'Rejuvenate You - Scottsdale',
    logo: {
      '@type': 'ImageObject',
      url: 'https://www.rejuvenate-you.com/logo.png'
    }
  }
};
---

<BaseLayout
  title="Rejuvenate You Blog | Waxing & Skincare Tips - Scottsdale"
  description="Expert tips and advice on waxing, skincare, and beauty treatments from Rejuvenate You in Scottsdale."
  schema={schema}
  currentLocation="scottsdale"
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4" style="color: #53009D;">
        Rejuvenate You Blog
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Check out our latest articles as we provide you with the latest and greatest info about our waxing and skincare services.
      </p>
      <p class="mt-4 text-purple-600">
        üìç Scottsdale, AZ | üìû <a href="tel:6239803867" class="underline">(623) 980-3867</a>
      </p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map((post) => (
        <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <a href={`/blog/${post.slug}/`} class="block">
            <div class="h-48 bg-gradient-to-br from-purple-100 to-purple-50 flex items-center justify-center">
              <span class="text-6xl">‚ú®</span>
            </div>
            <div class="p-6">
              <h2 class="text-lg font-bold mb-2 line-clamp-2" style="color: #53009D;">
                {post.data.title.replace(' | Rejuvenate You &mdash; Rejuvenate You', '').replace(' | Rejuvenate You ‚Äî Rejuvenate You', '').replace(' | Rejuvenate You', '')}
              </h2>
              <p class="text-gray-600 text-sm line-clamp-3 mb-4">
                {post.data.description}
              </p>
              <span class="inline-flex items-center font-semibold" style="color: #53009D;">
                Read More 
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </a>
        </article>
      ))}
    </div>

    <div class="mt-16 text-center">
      <div class="bg-purple-50 rounded-xl p-8 max-w-2xl mx-auto">
        <h2 class="text-2xl font-bold mb-4" style="color: #53009D;">
          Ready to book your Scottsdale appointment?
        </h2>
        <p class="text-gray-600 mb-6">
          Schedule your service today at our Scottsdale location.
        </p>
        <a
          href="https://rejuvenateyouwaxing.glossgenius.com/services"
          target="_blank"
          rel="noopener noreferrer"
          class="px-8 py-3 rounded-lg font-bold text-white"
          style="background-color: #53009D;"
        >
          Book Scottsdale
        </a>
        <p class="mt-4 text-sm text-gray-600">
          Or visit our <a href="/phoenix/blog" class="font-semibold hover:underline" style="color: #53009D;">Phoenix blog</a>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
