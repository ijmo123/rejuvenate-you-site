---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = 'About Rejuvenate You Scottsdale | Our Story & Mission';
const pageDescription = 'Learn about Rejuvenate You Scottsdale, our mission, values, and commitment to helping you look and feel your best with professional waxing and skincare services.';

