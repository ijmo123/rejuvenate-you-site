---
import BaseLayout from '../../layouts/BaseLayout.astro';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: 'Contact Rejuvenate You Scottsdale | Book Your Consultation',
  description: 'Contact Rejuvenate You in Scottsdale to schedule your consultation. Phone and online booking available.'
};
---

<BaseLayout
  title="Contact Rejuvenate You Scottsdale | Book Your Consultation"
  description="Have questions or ready to get started? Contact Rejuvenate You Scottsdale to schedule your consultation and begin your journey to refreshed confidence."
  schema={schema}
  currentLocation="scottsdale"
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-4 text-center" style="color: #53009D;">Contact Us - Scottsdale</h1>
    <p class="text-xl text-gray-600 mb-12 text-center">
      Have questions or ready to get started? Contact our Scottsdale location to schedule your consultation.
    </p>

    <div class="max-w-2xl mx-auto">
      <!-- Scottsdale Location -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8 border-4 border-purple-500">
        <div class="bg-purple-600 text-white p-6 text-center">
          <h2 class="text-2xl font-bold">Scottsdale</h2>
          <span class="inline-block mt-2 px-3 py-1 bg-white/20 rounded-full text-sm">You Are Here</span>
        </div>
        <div class="p-8 space-y-6">
          <div>
            <h3 class="font-semibold text-gray-700 mb-1">Address</h3>
            <p class="text-gray-600 text-lg">
              <a href="https://www.google.com/maps?cid=9311880125746937216" target="_blank" rel="noopener noreferrer" class="hover:underline">
                7127 E Sahuaro Dr, Ste 103<br>
                Scottsdale, AZ 85254
              </a>
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-gray-700 mb-1">Phone</h3>
            <p>
              <a href="tel:6239803867" class="text-2xl font-bold" style="color: #53009D;">(623) 980-3867</a>
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-gray-700 mb-1">Email</h3>
            <p>
              <a href="mailto:danielle@rejuvenate-you.com" class="text-lg" style="color: #53009D;">danielle@rejuvenate-you.com</a>
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-gray-700 mb-1">Hours</h3>
            <ul class="space-y-2 text-gray-600">
              <li class="flex justify-between">
                <span>Mon - Fri</span>
                <span>9 AM - 7 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Saturday</span>
                <span>9 AM - 2 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Sunday</span>
                <span>Closed</span>
              </li>
            </ul>
          </div>
          <a
            href="https://rejuvenateyouwaxing.glossgenius.com/services"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center px-6 py-4 rounded-lg font-bold text-white text-lg"
            style="background-color: #53009D;"
          >
            Book Scottsdale Appointment
          </a>
        </div>
      </div>

      <!-- Phoenix Location -->
      <div class="bg-gray-50 rounded-xl p-6 text-center border border-gray-200">
        <h3 class="text-lg font-semibold mb-2" style="color: #53009D;">Also in Phoenix</h3>
        <p class="text-gray-600 mb-2">
          727 E Bethany Home Rd<br>
          suite d-224<br>
          Phoenix, AZ 85014
        </p>
        <p class="text-gray-600 mb-4">
          ðŸ“ž (623) 980-3867
        </p>
        <a href="/phoenix/contact" class="inline-block px-6 py-2 rounded-lg font-semibold border-2 hover:bg-white transition" style="color: #53009D; border-color: #53009D;">
          Visit Phoenix Contact Page
        </a>
      </div>
    </div>

    <!-- Email Section -->
    <div class="bg-purple-50 rounded-xl p-8 text-center mt-12">
      <h2 class="text-2xl font-bold mb-4" style="color: #53009D;">Email Us</h2>
      <p class="text-gray-600 mb-4">Have questions? Send us an email and we'll get back to you within 24 hours.</p>
      <a 
        href="mailto:info@rejuvenate-you.com" 
        class="text-lg font-bold"
        style="color: #53009D;"
      >
        info@rejuvenate-you.com
      </a>
    </div>
  </div>
</BaseLayout>
