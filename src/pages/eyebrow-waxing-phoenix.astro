---
import ServicePage from '../layouts/ServicePage.astro';

const faqs = [
  {
    question: "How long does eyebrow waxing take?",
    answer: "Eyebrow waxing typically takes just 10-15 minutes. It's a quick service that can easily fit into your schedule."
  },
  {
    question: "How often should I get my eyebrows waxed?",
    answer: "Most clients return every 3-4 weeks to maintain their desired brow shape. However, this varies depending on how quickly your hair grows."
  },
  {
    question: "Can I get my eyebrows waxed if I'm using retinol?",
    answer: "We recommend stopping retinol products at least 5-7 days before your waxing appointment to avoid skin irritation or sensitivity."
  }
];
---

<ServicePage
  title="Eyebrow Waxing Phoenix | Brow Shaping & Grooming"
  description="Professional eyebrow waxing in Phoenix, AZ. Expert brow shaping and grooming to frame your face. Precise, quick, and long-lasting results. Book today!"
  price="$21"
  duration="10-15 min"
  location="phoenix" currentLocation="phoenix"
  faqs={faqs}
>

<!-- Hero Image -->
<div class="mb-8">
  <img 
    src="/images/6358773dfa2fa42351f2e029_1668540552001-16ISSCXYFGHFPTR421T0_eyebrow-waxing-scottsdale.jpeg"
